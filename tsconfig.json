{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@images/*": [
        "./src/assets/images/*"
      ]
    }
  }
}
